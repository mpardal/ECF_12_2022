{% block email_content %}
    {% mjml %}
        <mjml>
            <mj-body>
                <mj-section>
                    <mj-column>
                        <mj-image width="100px" src="/assets/img/logo-small.png"></mj-image>

                        <mj-divider border-color="#F45E43"></mj-divider>

                        <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Bonjour,</mj-text>
                        <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Vous recevez ce mail suite à
                            la création de votre structure {{ structure.name }}, lié à votre
                            franchise "{{ franchise.name }}".
                        </mj-text>
                        <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Pour valider la création de la
                            structure, veuillez cliquer sur le bouton qui suit.
                        </mj-text>
                        <mj-text font-size="20px" color="#F45E43" font-family="helvetica">
                            {# TODO: voir pour le port 8000 #}
                            <a href="{{ url('app_franchise_validate_structure', {franchiseId: franchise.id, structureId: structure.id}) }}">
                                Valider la structure
                            </a>
                        </mj-text>
                    </mj-column>
                </mj-section>
            </mj-body>
        </mjml>
    {% endmjml %}
{% endblock %}
