{% extends 'base.html.twig' %}

{% block title %}Création nouvel admin{% endblock %}

{% block body %}
    <h1 class="text-center my-4 text-decoration-underline">Nouvel admin</h1>
    {{ form_start(AdminRegistrationForm) }}
    <article class="articleInfo">
        <div class="d-flex flex-column my-2">
            {{ form_label(AdminRegistrationForm.email) }}
            {{ form_widget(AdminRegistrationForm.email, {'attr': {'class': 'form-control rounded-3'}}) }}
        </div>
        <div class="d-flex flex-column my-2">
            {{ form_label(AdminRegistrationForm.plainPassword) }}
            {{ form_widget(AdminRegistrationForm.plainPassword, {'attr': {'class': 'form-control rounded-3'}}) }}
        </div>
    </article>
    <div class="d-flex justify-content-center w-50 mt-4">
        <button type="submit" class="btn btn-success p-2">
            Création (administrateur)
        </button>
    </div>
    {{ form_end(AdminRegistrationForm) }}
{% endblock %}
