{% extends 'base.html.twig' %}

{% block title %}La liste des partenaires{% endblock %}

{% block body %}
    <div class="border searchPartner">
        <div class="searchDiv">
            <div class="search">
                <label for="client_name">Franchise</label>
                <input type="text" id="client_name">
            </div>
            <div class="search">
                <label for="client_id">Structure</label>
                <input type="number" id="client_id">
            </div>
        </div>
        <div>
            <button type="button">ACTIF</button>
            <button type="button">NON ACTIF</button>
        </div>
    </div>
    <h2>Liste des structures</h2>
    <section class="listPartner">
        {%  for structure in structures %}
            <article class="border">
                <div class="listPartnerDiv">
                    {{ include('structure/_image_structure.html.twig') }}
                    <div>
                        <p>{{ structure.name }}</p>
                        <p>{{ structure.address }}</p>
                        <p>{{ structure.shortDescription }}</p>
                        <p>{{ structure.fullDescription }}</p>
                    </div>
                </div>
                <div class="listActif">
                    {{ structure.active }}
                    <button type="button"><a href="{{ path('app_admin_edit_structure', {id : structure.id}) }}">Modifier une structure</a></button>
                </div>

                <div class="listActif">
                    {% include 'interrupteur/_interrupteur.html.twig' with {active : franchise.active} only %}
{#                    {% if is_granted('ROLE_ADMIN') %}#}
                        <button type="button"><a href="{{ path('app_admin_edit_structure', {id : structure.id}) }}">Modifier la structure</a></button>
                        <button type="button"><a href="{{ path('app_forgot_password_request', {id : structure.id}) }}">Voir la structure</a></button>
{#                    {% endif %}#}
{#                    #}{# {% elseif is_granted('ROLE_USER')%} #}
{#                    <button type="button"><a href="{{ path('app_detail_structure', {id : franchise.id}) }}">Voir la franchise</a></button>#}
{#                    <button type="button"><a href="{{ path('app_detail_franchise', {id : franchise.id}) }}">Réinitialisation mot de passe</a></button>#}
                    {#                    {% endif %}#}

                </div>
            </article>
        {% endfor %}
    </section>

    <div class="partnerButton">
        <button><a href="{{ path('app_admin_create_structure') }}">Créer une nouvelle structure</a></button>
    </div>
    {{ knp_pagination_render(structures) }}
{% endblock %}

