{% extends 'base.html.twig' %}

{% block title %}Page de connexion structure{% endblock %}

{% block body %}
<form method="post">
    {% if app.user %}
        <div>
            Vous êtes connectés en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout_structure') }}">Se déconnecter</a>
        </div>
    {% endif %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1>Connectez-vous</h1>
<h3>Accès structure</h3>

<div class="inputConnect">
    <div>
        <label for="username">Identifiant (e-mail) :</label>
        <input type="email" id="username" name="username" value="{{ last_username }}" autocomplete="email" required autofocus/>
    </div>
    <div>
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="password" required/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
    </div>
    {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

    <button type="submit">Se connecter (structure)</button>
</div>
</form>
{% endblock %}