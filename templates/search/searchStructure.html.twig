<section class="border rounded-3 p-2 m-1">
    {{ form_start(structureSearchType) }}
    <div class="d-flex flex-row justify-content-between">
        <div class="d-flex flex-column w-75">
            <div class="d-flex flex-column m-3">
                {{ form_label(structureSearchType.name) }}
                {{ form_widget(structureSearchType.name) }}
            </div>
            <div>
                {{ form_widget(structureSearchType.active, {'attr': {'class': 'd-flex flex-row justify-content-around justify-content-lg-start px-lg-5 m-3'}}) }}
            </div>
        </div>
        <div class="d-flex flex-column">
            <button type="reset" class="rounded-3 p-1 m-2">
                TOUTES
            </button>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_admin_create_structure') }}">
                    <button type="button" class="rounded-3 p-1 m-2">
                        AJOUTER
                    </button>
                </a>
            {% endif %}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="rounded-3 p-1">
            RECHERCHER
        </button>
    </div>
    {{ form_end(structureSearchType) }}
</section>