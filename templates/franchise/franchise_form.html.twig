<article class="border rounded-1 p-2 m-1">
    <div class="d-flex flex-column my-2">
        {{ form_label(franchiseRegistrationForm.name) }}
        {{ form_widget(franchiseRegistrationForm.name, {'attr': {'class': 'form-control rounded-3'}}) }}
    </div>
    <div class="d-flex flex-column my-2">
        {{ form_label(franchiseRegistrationForm.email) }}
        {{ form_widget(franchiseRegistrationForm.email, {'attr': {'class': 'form-control rounded-3'}}) }}
    </div>
    <div class="d-flex flex-column my-2">
        {{ form_label(franchiseRegistrationForm.city) }}
        {{ form_widget(franchiseRegistrationForm.city, {'attr': {'class': 'form-control rounded-3'}}) }}
    </div>
    <div class="d-flex my-2 form-switch active-switch">
        {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.active} only %}
    </div>
    <div class="d-flex flex-column my-2">
        {{ form_label(franchiseRegistrationForm.imageFile) }}
        {{ form_widget(franchiseRegistrationForm.imageFile, {'attr': {'class': 'form-control rounded-3'}}) }}
    </div>
</article>
<section class="border rounded-1 p-2 m-1 mt-3">
    <h2 class="text-center m-4">Options de la franchise</h2>
    <article class="d-flex flex-column flex-md-row justify-content-md-around">
        <div>
            <div class="d-flex my-2 form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.wheySale} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.towelSale} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.drinkSale} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.sauna} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.paymentDay} only %}
            </div>
        </div>
        <div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.lateClosing} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.sendNewsletter} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.ringBoxe} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.crossfit} only %}
            </div>
            <div class="d-flex my-2 justify-content-between form-check form-switch">
                {% include "interrupteur/_interrupteur_new_edit.html.twig" with {form: franchiseRegistrationForm.biking} only %}
            </div>
        </div>
    </article>
</section>
{{ form_rest(franchiseRegistrationForm) }}
